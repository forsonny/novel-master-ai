{
	"name": "novel-master-hamster",
	"displayName": "Novel Master AI",
	"description": "A visual Kanban board interface for Novel Master projects in VS Code",
	"version": "0.25.3",
	"publisher": "Hamster",
	"icon": "assets/icon.png",
	"engines": {
		"vscode": "^1.93.0"
	},
	"categories": ["AI", "Visualization", "Education", "Other"],
	"keywords": [
		"kanban",
		"kanban board",
		"productivity",
		"todo",
		"task tracking",
		"project management",
		"novel-master",
		"task management",
		"agile",
		"scrum",
		"ai",
		"mcp",
		"model context protocol",
		"dashboard",
		"chatgpt",
		"claude",
		"openai",
		"anthropic",
		"task",
		"npm",
		"intellicode",
		"react",
		"typescript",
		"php",
		"python",
		"node",
		"planner",
		"organizer",
		"workflow",
		"boards",
		"cards"
	],
	"repository": "https://github.com/eyaltoledano/claude-novel-master",
	"activationEvents": ["onStartupFinished", "workspaceContains:.novelmaster/**"],
	"main": "./dist/extension.js",
	"contributes": {
		"viewsContainers": {
			"activitybar": [
				{
					"id": "novelmaster",
					"title": "Novel Master",
					"icon": "assets/sidebar-icon.svg"
				}
			]
		},
		"views": {
			"novelmaster": [
				{
					"id": "novelmaster.welcome",
					"name": "Novel Master",
					"type": "webview"
				}
			]
		},
		"commands": [
			{
				"command": "tm.showKanbanBoard",
				"title": "Novel Master: Show Board"
			},
			{
				"command": "tm.checkConnection",
				"title": "Novel Master: Check Connection"
			},
			{
				"command": "tm.reconnect",
				"title": "Novel Master: Reconnect"
			},
			{
				"command": "tm.openSettings",
				"title": "Novel Master: Open Settings"
			}
		],
		"configuration": {
			"title": "Novel Master Kanban",
			"properties": {
				"novelmaster.mcp.command": {
					"type": "string",
					"default": "npx",
					"description": "The command or absolute path to execute for the MCP server (e.g., 'npx' or '/usr/local/bin/novel-master-ai')."
				},
				"novelmaster.mcp.args": {
					"type": "array",
					"items": {
						"type": "string"
					},
					"default": ["-y", "novel-master-ai"],
					"description": "An array of arguments to pass to the MCP server command."
				},
				"novelmaster.mcp.cwd": {
					"type": "string",
					"description": "Working directory for the Novel Master MCP server (defaults to workspace root)"
				},
				"novelmaster.mcp.env": {
					"type": "object",
					"description": "Environment variables for the Novel Master MCP server"
				},
				"novelmaster.mcp.timeout": {
					"type": "number",
					"default": 30000,
					"minimum": 1000,
					"maximum": 300000,
					"description": "Connection timeout in milliseconds"
				},
				"novelmaster.mcp.maxReconnectAttempts": {
					"type": "number",
					"default": 5,
					"minimum": 1,
					"maximum": 20,
					"description": "Maximum number of reconnection attempts"
				},
				"novelmaster.mcp.reconnectBackoffMs": {
					"type": "number",
					"default": 1000,
					"minimum": 100,
					"maximum": 10000,
					"description": "Initial reconnection backoff delay in milliseconds"
				},
				"novelmaster.mcp.maxBackoffMs": {
					"type": "number",
					"default": 30000,
					"minimum": 1000,
					"maximum": 300000,
					"description": "Maximum reconnection backoff delay in milliseconds"
				},
				"novelmaster.mcp.healthCheckIntervalMs": {
					"type": "number",
					"default": 15000,
					"minimum": 5000,
					"maximum": 60000,
					"description": "Health check interval in milliseconds"
				},
				"novelmaster.mcp.requestTimeoutMs": {
					"type": "number",
					"default": 300000,
					"minimum": 30000,
					"maximum": 600000,
					"description": "MCP request timeout in milliseconds (default: 5 minutes)"
				},
				"novelmaster.ui.autoRefresh": {
					"type": "boolean",
					"default": true,
					"description": "Automatically refresh tasks from the server"
				},
				"novelmaster.ui.refreshIntervalMs": {
					"type": "number",
					"default": 10000,
					"minimum": 1000,
					"maximum": 300000,
					"description": "Auto-refresh interval in milliseconds"
				},
				"novelmaster.ui.theme": {
					"type": "string",
					"enum": ["auto", "light", "dark"],
					"default": "auto",
					"description": "UI theme preference"
				},
				"novelmaster.ui.showCompletedTasks": {
					"type": "boolean",
					"default": true,
					"description": "Show completed tasks in the Kanban board"
				},
				"novelmaster.ui.taskDisplayLimit": {
					"type": "number",
					"default": 100,
					"minimum": 1,
					"maximum": 1000,
					"description": "Maximum number of tasks to display"
				},
				"novelmaster.ui.showPriority": {
					"type": "boolean",
					"default": true,
					"description": "Show task priority indicators"
				},
				"novelmaster.ui.showTaskIds": {
					"type": "boolean",
					"default": true,
					"description": "Show task IDs in the interface"
				},
				"novelmaster.performance.maxConcurrentRequests": {
					"type": "number",
					"default": 5,
					"minimum": 1,
					"maximum": 20,
					"description": "Maximum number of concurrent MCP requests"
				},
				"novelmaster.performance.requestTimeoutMs": {
					"type": "number",
					"default": 30000,
					"minimum": 1000,
					"maximum": 300000,
					"description": "Request timeout in milliseconds"
				},
				"novelmaster.performance.cacheTasksMs": {
					"type": "number",
					"default": 5000,
					"minimum": 0,
					"maximum": 60000,
					"description": "Task cache duration in milliseconds"
				},
				"novelmaster.performance.lazyLoadThreshold": {
					"type": "number",
					"default": 50,
					"minimum": 10,
					"maximum": 500,
					"description": "Number of tasks before enabling lazy loading"
				},
				"novelmaster.debug.enableLogging": {
					"type": "boolean",
					"default": true,
					"description": "Enable debug logging"
				},
				"novelmaster.debug.logLevel": {
					"type": "string",
					"enum": ["error", "warn", "info", "debug"],
					"default": "info",
					"description": "Logging level"
				},
				"novelmaster.debug.enableConnectionMetrics": {
					"type": "boolean",
					"default": true,
					"description": "Enable connection performance metrics"
				},
				"novelmaster.debug.saveEventLogs": {
					"type": "boolean",
					"default": false,
					"description": "Save event logs to files"
				},
				"novelmaster.debug.maxEventLogSize": {
					"type": "number",
					"default": 1000,
					"minimum": 10,
					"maximum": 10000,
					"description": "Maximum number of events to keep in memory"
				}
			}
		}
	}
}
